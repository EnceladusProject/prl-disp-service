#!/bin/bash

LOGFILE="/var/log/vz_systemd.log"

/usr/bin/date >> $LOGFILE 2>&1
echo "First start" >> $LOGFILE 2>&1
/usr/libexec/prl_disp_first_start >> $LOGFILE 2>&1
echo $? >> $LOGFILE 2>&1
echo "daemon-reload" >> $LOGFILE 2>&1
/usr/bin/systemctl daemon-reload >> $LOGFILE 2>&1
echo $? >> $LOGFILE 2>&1
echo "touch" >> $LOGFILE 2>&1
touch /run/virtuozzo.target.start >> $LOGFILE 2>&1
echo $? >> $LOGFILE 2>&1
echo "start virtuozzo.target" >> $LOGFILE 2>&1
/usr/bin/systemctl start virtuozzo.target >> $LOGFILE 2>&1
echo $? >> $LOGFILE 2>&1
echo "unlink" >> $LOGFILE 2>&1
rm -f /run/virtuozzo.target.start >> $LOGFILE 2>&1
echo $? >> $LOGFILE 2>&1

#:
